
<h1> <%= @game.player_1.name %> vs. <%= @game.player_2.name %></h1>

<p>It's <%= @game.active_player.name %>'s turn.</p>
<form action="/switch" method="get">
  <input type="submit" value="Switch players">
</form>


<table><tr>
<td style="vertical-align:top">
<p> <%= @game.opponent.name %>'s HP: <%= @game.opponent.hp %> </p>
<progress id="health" value="<%= @game.opponent.hp %>" max="100" style="background-color: red"></progress>
</td>

<td style="vertical-align:top">
<p> <%= @game.active_player.name %>'s HP: <%= @game.active_player.hp %> </p>
<progress id="health" value="<%= @game.active_player %>" max="100" style="background-color: green"></progress>
</td>
</tr></table>

<p><form action="/attack" method="get">
  <input type="submit" id="Attack!" value="Attack <%= @game.opponent.hp %>!">
</form></p>
<p><form action="/poison" method="get">
  <input type="submit" id="Poison!" value="Poison <%= @game.opponent.hp %>!">
</form></p>
